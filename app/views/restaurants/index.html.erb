<div class="container">
  <h1><strong>Your Favorite Restaurants</strong></h1>
  <%= link_to "Add a new restaurant!", new_restaurant_path, class: "btn btn-success m-3" %>
</div>
<div class="container">
  <div>
    <% @restaurants.each do |restaurant| %>
    <div class="card d-flex">
     <div class="row align-items-center justify-content-center">
       <h3><%= restaurant.name %> - <% restaurant.category.capitalize %></h3>
       <h3><%= link_to "Display restaurant details", restaurant_path(restaurant), class: "btn btn-primary m-3" %></h3>
     </div>
   </div>
   <% end %>
 </div>
</div>
</body>
</html>
